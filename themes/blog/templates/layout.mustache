<!DOCTYPE html>
<html lang='en'>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
        {{{assets_markup.default}}}
        <title>
            {{#page_title}}
                {{page_title}} - {{site_name}}
            {{/page_title}}
            {{^page_title}}
                {{site_name}}
            {{/page_title}}
        </title>
    </head>
    <body>
        <div id="wrapper">
            <nav id="main-nav"><ul>{{#site_menu}}<li><a href="{{url}}">{{title}}</a></li>{{/site_menu}}</ul></nav>
            <div id="banner">
                <span id='site-title'><a href="{{site_path}}index.html">{{site_title}}</a></span>
                <span id='site-tagline'>{{site_tagline}}</span>
            </div>
            <div id="body">
                {{{body}}}
            </div>
            <div id="footer">
                Generated by Foonoo
            </div>
        </div>
    </body>
</html>
