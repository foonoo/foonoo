<div class="post">
    <div class="time">{{date}} under {{frontmatter.category}}</div>
    <div>
        <h2 class='post-title'>{{#previews_only}}<a href="{{site_path}}{{path}}">{{/previews_only}}{{title}}{{#previews_only}}</a>{{/previews_only}}</h2>
        {{#previews_only}}
            {{{preview}}}
            <a href="{{site_path}}{{path}}">Continue reading</a>
        {{/previews_only}}
        {{^previews_only}}
            {{{body}}}
        {{/previews_only}}
    </div>
    {{^previews_only}}
    <div id="bottomnav">
        {{#prev}}
        <div id="prev">
            <a href="../../../{{prev.path}}">{{prev.title}}</a>
        </div>
        {{/prev}}
        {{#next}}
        <div id="next">
            <a href="../../../{{next.path}}">{{next.title}}</a>
        </div>
        {{/next}}
    </div>
    {{/previews_only}}
</div>
